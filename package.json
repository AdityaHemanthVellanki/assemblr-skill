{
  "name": "assemblr",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w apps/web\" \"npm run dev -w services/worker\"",
    "dev:web": "npm run dev -w apps/web",
    "dev:worker": "npm run dev -w services/worker",
    "build": "npm run generate && npm run build -w apps/web && npm run build -w services/worker",
    "generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "npm run lint -w apps/web"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prisma": "^6.2.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
